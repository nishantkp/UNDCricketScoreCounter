<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>home
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for scoreContract button for each team -->
    <style name="homeScreenScoreButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/score_matrix_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Style for ball count button for each team -->
    <style name="homeScreenBallCountButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/score_matrix_button_selector</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for wicket button for each team -->
    <style name="homeScreenWicketButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/button_rectangle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for reset button -->
    <style name="homeScreenResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">42dp</item>
        <item name="android:paddingRight">42dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/reset_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for total run text view -->
    <style name="homeScreenRunsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">46sp</item>
    </style>

    <!-- Style for wicket text view -->
    <style name="homeScreenWicketTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for strike rate text view -->
    <style name="homeScreenStrikeRateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Style for ball count text view -->
    <style name="homeScreenBallCountTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Alert dialog theme when user presses back button from main activity -->
    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_dialog_background</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorPrimary">#757575</item>
    </style>

    <!-- Team Selection activity theme -->
    <style name="TeamSelectionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/teamSelectionColorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>
